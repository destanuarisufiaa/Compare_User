<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical"
    android:background="@drawable/top_background2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:text="Tittle"
        android:background="@drawable/bg_rounded_white"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/detailTittle"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <ImageView
        android:layout_width="430dp"
        android:layout_height="400dp"
        android:id="@+id/detailImage"
        android:layout_marginTop="15dp"
        android:padding="8dp"
        android:layout_gravity="center"
        android:src="@drawable/uploading"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRICE : "
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:text="Harga"
            android:background="@drawable/bg_rounded_white"
            android:layout_gravity="center"
            android:id="@+id/detailHarga"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESCRIPTION : "
            android:layout_marginTop="10dp"
            android:layout_below="@+id/detailHarga"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:background="@drawable/bg_rounded_white"
            android:layout_below="@id/tv_deskripsi"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:layout_gravity="center"
            android:id="@+id/detailDesc"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/buttonCart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/detailDesc"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:background="@color/teal_700"
            android:drawableLeft="@drawable/ic_baseline_add_shopping_cart_24"
            android:text="ADD TO CART"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>
    </LinearLayout>
</ScrollView>